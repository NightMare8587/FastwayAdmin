<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fillViewport="true"
    android:layout_marginBottom="65dp"
    android:background="#DAF4F7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DAF4F7">

        <ImageView
            android:id="@+id/comboDiscountImageView"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:layout_marginTop="6dp"
            android:scaleType="fitXY"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurantOnOff"
            app:srcCompat="@drawable/discountback" />

        <LinearLayout
            android:id="@+id/mainFragLinearLayout"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comboDiscountImageView"
            tools:ignore="HardcodedText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="0.6"
                    android:fontFamily="@font/merriweather_sans_bold"
                    android:padding="3dp"
                    android:text="Current Tables"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/refreshCurrentTables"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0.3"
                    android:background="@null"
                    android:drawableStart="@drawable/ic_baseline_refresh_24"
                    android:fontFamily="@font/merriweather_sans_bold"
                    android:text="Refresh"
                    android:textAlignment="center"
                    android:textColor="@color/quantum_cyan"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/homeFragRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:reverseLayout="true" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondFragLinearLayout"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainFragLinearLayout"
            tools:ignore="HardcodedText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="0.6"
                    android:fontFamily="@font/merriweather_sans_bold"
                    android:padding="3dp"
                    android:text="Current Takeaway's"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/refreshCurrentTakeAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0.3"
                    android:background="@null"
                    android:drawableStart="@drawable/ic_baseline_refresh_24"
                    android:fontFamily="@font/merriweather_sans_bold"
                    android:text="Refresh"
                    android:textAlignment="center"
                    android:textColor="@color/quantum_cyan"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/homeFragTakeAwayRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:reverseLayout="true" />

            </LinearLayout>


        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/homeFragToolBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/toolbar_background_layout"
            android:maxHeight="60dp"
            android:minHeight="55dp"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Home"
            app:titleTextColor="@color/black" />

        <Switch
            android:id="@+id/restaurantOnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="8dp"
            android:checked="true"
            android:fontFamily="@font/merriweather_sans_bold"
            android:text="Online"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/comboDiscountImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeFragToolBar"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/acceptingOrdersSwitchHomeFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            android:checked="true"
            android:fontFamily="@font/merriweather_sans_bold"
            android:text="Accept Orders"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/comboDiscountImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeFragToolBar"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:id="@+id/myLinearLayoutHome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secondFragLinearLayout"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="157dp" >

            <TextView
                android:id="@+id/totalOrdersMadeTodayHomeFrag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Total Orders Made Today"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/totalTransactionsMadeTodayHomeFrag"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Total Transactions Made Today"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:id="@+id/ggWP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myLinearLayoutHome"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="157dp" >

            <TextView
                android:id="@+id/valueOfTotalOrdersMadeHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="0"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:id="@+id/valueOfTotalTransactionsTodayHome"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="0"
                android:textAlignment="center"
                android:layout_weight="1"/>

        </LinearLayout>

        <Button
            android:id="@+id/seeMoreDetailsHomeFragButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_back"
            android:padding="10dp"
            android:text="See More Details"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ggWP" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>