<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateShowCampaign.CampaignActivity">

    <Button
        android:id="@+id/createAddNewCampaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create New Campaign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPrevAdap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8" />

    <TextView
        android:id="@+id/currentCampaignTextViewAboveLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter"
        android:text="Current Campaign"
        android:textSize="22sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAddNewCampaign" />

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentCampaignTextViewAboveLinearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:text="Campaign Name: Delight50"
            android:textSize="19sp"
            android:id="@+id/campCurrentName"
            android:layout_margin="3dp"
            android:textColor="#000000"
            android:fontFamily="@font/inter"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Total Customer's: 259"
            android:textSize="19sp"
            android:layout_margin="3dp"
            android:textColor="#000000"
            android:id="@+id/campCurrentTotalCust"
            android:fontFamily="@font/inter"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Total Order's: 259"
            android:textSize="19sp"
            android:layout_margin="3dp"
            android:id="@+id/campCurrentTotalOrders"
            android:textColor="#000000"
            android:fontFamily="@font/inter"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Transaction Amount: \u20b91596"
            android:textSize="19sp"
            android:layout_margin="3dp"
            android:textColor="#000000"
            android:id="@+id/campCurrentTotalTransAmount"
            android:fontFamily="@font/inter"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:id="@+id/deleteCurrentCampButton"
            android:padding="8dp"
            android:background="@color/blue"
            android:textSize="16sp"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:elevation="5dp"
            android:text="Delete Campaign"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="Previous Campaigns"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewPrevAdap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>