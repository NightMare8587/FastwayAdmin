<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="145dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/card_stroke"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nameTakeAwayCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/amarante"
            android:text="Name: "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paymentModeTEakeaway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/amarante"
            android:text="Mode: "
            android:textColor="@color/slate_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/chatTakeAwayUser"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/chat_with_customer_button"
            android:padding="5dp"
            android:text="Chat With Customer"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/takeAwayCurrentOrder"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/chat_with_customer_button"
            android:padding="8dp"
            android:text="Current Order"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>