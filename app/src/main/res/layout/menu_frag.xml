<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menuFragBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:columnCount="2"
        android:padding="15dp"
        app:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuFragBar">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/MainCourse"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            fancy:fb_text="Main Course"
            fancy:fb_defaultColor="#7ab800"
            fancy:fb_textSize="20dp"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"

            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/Breads"
            android:layout_width="0dp"
            android:layout_height="92dp"
            fancy:fb_text="Breads"
            android:layout_margin="10dp"
            fancy:fb_defaultColor="#747D09"
            fancy:fb_textSize="20dp"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/Snacks"
            android:layout_width="0dp"
            android:layout_height="92dp"
            fancy:fb_text="Snacks"
            fancy:fb_defaultColor="#7D2909"
            fancy:fb_textSize="20dp"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/Deserts"
            android:layout_width="0dp"
            android:layout_height="92dp"
            fancy:fb_text="Deserts"
            fancy:fb_defaultColor="#68097D"
            android:layout_margin="10dp"
            fancy:fb_textSize="20dp"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/Sweets"
            android:layout_width="0dp"
            android:layout_height="92dp"
            fancy:fb_text="Sweets"
            fancy:fb_defaultColor="#097A7D"
            android:layout_margin="10dp"
            fancy:fb_textSize="20dp"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/Drinks"
            android:layout_width="0dp"
            android:layout_height="92dp"
            fancy:fb_text="Drinks"
            fancy:fb_defaultColor="#3b5998"
            fancy:fb_textSize="20dp"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            android:layout_margin="10dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            />
    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>