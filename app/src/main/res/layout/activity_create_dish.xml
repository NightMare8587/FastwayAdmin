<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivities.CreateDish">

    <EditText
        android:id="@+id/dishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="Name Of Dish"
        android:inputType="textPersonName"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/halfPlatePrice"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="Half Plate Price"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dishName" />

    <EditText
        android:id="@+id/fullPlatePrice"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="Full Plate Price"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/halfPlatePrice" />

    <Button
        android:id="@+id/saveDishInfo"
        android:layout_width="180dp"
        android:layout_height="69dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/input"
        android:text="Create Dish"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullPlatePrice" />

</androidx.constraintlayout.widget.ConstraintLayout>