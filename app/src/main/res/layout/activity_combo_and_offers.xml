<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".DiscountCombo.ComboAndOffers">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:columnCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/comboMainCourse"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            fancy:fb_defaultColor="#7ab800"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="Main Course"
            fancy:fb_textSize="20dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/comboBreads"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            fancy:fb_defaultColor="#747D09"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="Breads"
            fancy:fb_textSize="20dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/comboSnacks"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            fancy:fb_defaultColor="#7D2909"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="Snacks"
            fancy:fb_textSize="20dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/comboDeserts"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            fancy:fb_defaultColor="#68097D"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="Deserts/    Sweets"
            fancy:fb_textSize="20dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/comboDrinks"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            fancy:fb_defaultColor="#097A7D"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="Drinks"
            fancy:fb_textSize="20dp" />

        <!--        <mehdi.sakout.fancybuttons.FancyButton-->
        <!--            android:id="@+id/Drinks"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="92dp"-->
        <!--            fancy:fb_text="Drinks"-->
        <!--            fancy:fb_defaultColor="#3b5998"-->
        <!--            fancy:fb_textSize="20dp"-->
        <!--            fancy:fb_focusColor="#9bd823"-->
        <!--            fancy:fb_radius="30dp"-->
        <!--            android:layout_margin="10dp"-->
        <!--            app:layout_column="1"-->
        <!--            app:layout_columnWeight="1"-->
        <!--            app:layout_row="2"-->
        <!--            />-->
    </androidx.gridlayout.widget.GridLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comboAndOfferRecyclerView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="13dp"
        android:text="Current items"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/addToComboButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:text="Create Combo"
        android:textColor="@color/red_btn_bg_pressed_color"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>