<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    android:background="#76E1F5"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:text="By Continuing, you accept the Terms and Conditions and Accepts the Privacy policy"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="https://www.websitepolicies.com/policies/view/CpwDZziF"
        android:textSize="22sp"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/acceptTermsAndC"
        android:layout_width="match_parent"
        android:text="Accept"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_height="wrap_content"/>
</LinearLayout>