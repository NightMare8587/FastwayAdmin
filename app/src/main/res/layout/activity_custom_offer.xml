<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".DiscountCombo.CustomOffer">


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="15dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/MainCourseCustom"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            fancy:fb_defaultColor="#7ab800"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="Main Course"
            fancy:fb_textSize="20dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/BreadsCustom"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            fancy:fb_defaultColor="#747D09"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="Breads"
            fancy:fb_textSize="20dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/SnacksCustom"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            fancy:fb_defaultColor="#7D2909"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="Snacks"
            fancy:fb_textSize="20dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/DesertsCustom"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            fancy:fb_defaultColor="#68097D"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="Deserts/    Sweets"
            fancy:fb_textSize="20dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/ComboCustom"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            fancy:fb_defaultColor="#097A7D"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="Special Thali/          Combo"
            fancy:fb_textSize="20dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/DrinksCustom"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            fancy:fb_defaultColor="#3b5998"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_radius="30dp"
            fancy:fb_text="Drinks"
            fancy:fb_textSize="20dp" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>