<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info.RestaurantDocuments.ReUploadDocuments.ViewAndReuploadDocuments">

    <LinearLayout
        android:id="@+id/linearLayoutReUPloadDocs"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/gstGridViewButton"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/teal_200"
                android:text="GST"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"

                />

            <Button
                android:id="@+id/adhaarGridViewButton"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/quantum_cyan"
                android:text="ADHAAR"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16sp" />


            <Button
                android:id="@+id/fssaiGridViewButton"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/quantum_googred50"
                android:text="FSSAI"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/panGridViewButton"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/blue_btn_bg_color"
                android:text="PAN CARD"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/resProofGridViewButton"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/purple_200"
                android:text="RES PROOF"
                android:textSize="16sp"

                />
        </LinearLayout>





    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewViewAndReuploadDocuments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutReUPloadDocs"
        tools:srcCompat="@tools:sample/avatars" />

    <ProgressBar
        android:id="@+id/viewAndReuploadProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="112dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewViewAndReuploadDocuments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutReUPloadDocs" />
</androidx.constraintlayout.widget.ConstraintLayout>