<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:padding="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="Campaign Name: Delight50"
            android:textSize="19sp"
            android:id="@+id/campCurrentNameRecycler"
            android:layout_margin="3dp"
            android:textColor="#000000"
            android:fontFamily="@font/inter"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Total Customer's: 259"
            android:textSize="19sp"
            android:layout_margin="3dp"
            android:textColor="#000000"
            android:id="@+id/campCurrentTotalCustRecycler"
            android:fontFamily="@font/inter"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Total Order's: 259"
            android:textSize="19sp"
            android:layout_margin="3dp"
            android:id="@+id/campCurrentTotalOrdersRecycler"
            android:textColor="#000000"
            android:fontFamily="@font/inter"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Transaction Amount: \u20b91596"
            android:textSize="19sp"
            android:layout_margin="3dp"
            android:textColor="#000000"
            android:id="@+id/campCurrentTotalTransAmountRecycler"
            android:fontFamily="@font/inter"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Transaction Amount: \u20b91596"
            android:textSize="19sp"
            android:layout_margin="3dp"
            android:textColor="#000000"
            android:id="@+id/campCurrentTextDateEndedRecycler"
            android:fontFamily="@font/inter"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>