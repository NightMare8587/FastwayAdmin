<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeFragClassCardView"
    android:layout_width="200dp"
    android:layout_height="145dp"
    android:layout_margin="10dp"
    android:background="@color/transparent"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_stroke"
        android:orientation="vertical">

        <TextView
            android:id="@+id/homeFragRecyclerViewTables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/inter"
            android:text="Table Number: "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/homeFragRecyclerViewSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/inter"
            android:text="Seats: "
            android:textColor="@color/slate_black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@drawable/chat_with_customer_button"
            android:padding="5dp"
            android:text="Chat With Customer"
            android:textColor="#000000"

            android:textStyle="bold" />

        <Button
            android:id="@+id/isCurrentOrderMade"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@drawable/chat_with_customer_button"
            android:padding="8dp"
            android:text="Current Order"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>