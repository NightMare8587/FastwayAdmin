<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="160dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/card_stroke"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/homeFragRecyclerViewTables"
            android:text="Table Number: "
            android:textStyle="bold"
            android:layout_margin="9dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_margin="9dp"
            android:id="@+id/homeFragRecyclerViewSeats"
            android:text="Seats: "
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/chat"
            android:layout_gravity="center"
            android:background="@drawable/chat_with_customer_button"
            android:padding="8dp"
            android:text="Chat With Customer" />
        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:background="@drawable/chat_with_customer_button"
            android:padding="8dp"
            android:text="Chat With Customer" />
    </LinearLayout>

</androidx.cardview.widget.CardView>